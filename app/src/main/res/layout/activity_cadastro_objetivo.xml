<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroObjetivoActivity">

    <TextView
        android:id="@+id/textoNutrilife"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NutriLife"
        android:textColor="#214B3C"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkBoxOutro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Outro."
        app:layout_constraintEnd_toEndOf="@id/checkBoxDesempenhoFisico"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toBottomOf="@id/checkBoxDesempenhoFisico" />

    <TextView
        android:id="@+id/textoPerguntaObjetivo"
        android:layout_width="274dp"
        android:layout_height="38dp"
        android:text="Agora que já nos conhecemos, conte-nos, qual o seu objetivo?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagemLogoCadastro"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteY="194dp" />

    <ImageView
        android:id="@+id/imagemLogoCadastro"
        android:layout_width="172dp"
        android:layout_height="164dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.556"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textoPerguntaObjetivo"
        app:srcCompat="@drawable/logocadastro" />

    <CheckBox
        android:id="@+id/checkBoxSaudeGeral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Bem-estar geral."
        app:layout_constraintEnd_toEndOf="@id/textoPerguntaObjetivo"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkBoxSaudeMental" />

    <CheckBox
        android:id="@+id/checkBoxDesempenhoFisico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Desempenho Físico."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/checkBoxOutro"
        app:layout_constraintTop_toBottomOf="@id/checkBoxSaudeGeral" />

    <CheckBox
        android:id="@+id/checkBoxPerdaDePeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perda de peso."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textoPerguntaObjetivo"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@id/checkBoxSaudeMental"
        app:layout_constraintEnd_toEndOf="@id/textoPerguntaObjetivo"
         />

    <CheckBox
        android:id="@+id/checkBoxSaudeMental"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Melhorar a saúde mental."
        app:layout_constraintTop_toBottomOf="@id/checkBoxPerdaDePeso"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/checkBoxSaudeGeral"
        />

    <Button
        android:id="@+id/botaoContinuar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:backgroundTint="#F03045"
        app:layout_constraintTop_toBottomOf="@id/checkBoxOutro"
        app:layout_constraintBottom_toTopOf="@id/textoNutrilife"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="592dp" />
</androidx.constraintlayout.widget.ConstraintLayout>